<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lights On:"
            android:id="@+id/textView_lightsOnLabel"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lights Off:"
            android:id="@+id/textView_lightsOffLabel"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="16dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:00 AM"
            android:id="@+id/textView_lightsOn"
            android:typeface="serif"
            android:gravity="center|top"
            android:paddingBottom="25dp"
            android:layout_weight="1"
            android:textColor="#ffff5932" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:00 PM"
            android:id="@+id/textView_lightsOff"
            android:gravity="center|top"
            android:typeface="serif"
            android:paddingBottom="25dp"
            android:layout_weight="1"
            android:textColor="#ff965cdc" />

    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Min Temp:"
        android:id="@+id/textView_minTempLabel"
        android:padding="16dp"
        android:typeface="serif"
        android:layout_below="@+id/textView_latestTemp"
        android:layout_alignLeft="@+id/textViewTemperatureDate"
        android:layout_alignStart="@+id/textViewTemperatureDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Max Temp:"
        android:id="@+id/textView_maxTempLabel"
        android:padding="16dp"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView_minTempLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-0.00 F"
        android:id="@+id/textView_minTemp"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView_maxTemp"
        android:layout_toRightOf="@+id/verticalSeekBar"
        android:layout_alignRight="@+id/textView_minTempLabel"
        android:layout_alignEnd="@+id/textView_minTempLabel"
        android:gravity="center_horizontal|top"
        android:paddingBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-0.00 F"
        android:id="@+id/textView_maxTemp"
        android:gravity="center_horizontal|top"
        android:typeface="serif"
        android:layout_below="@+id/textView_maxTempLabel"
        android:layout_alignRight="@+id/textViewTemperatureDate"
        android:layout_alignEnd="@+id/textViewTemperatureDate"
        android:layout_alignLeft="@+id/textView_maxTempLabel"
        android:layout_alignStart="@+id/textView_maxTempLabel"
        android:paddingBottom="25dp" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView"
        android:layout_below="@+id/textView_minTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
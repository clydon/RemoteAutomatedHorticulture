<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.craftapps.remotehorticulture.app.widgets.VerticalSeekBar
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="25dp"
        android:layout_centerHorizontal="false"
        android:max="120"
        android:id="@+id/verticalSeekBar"
        android:progress="0"
        android:thumb="@android:color/transparent"
        android:layout_alignBottom="@+id/textView_latestTemp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.00Â° F"
        android:id="@+id/textView_latestTemp"
        android:gravity="center"
        android:textSize="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/verticalSeekBar"
        android:paddingTop="30dp"
        android:typeface="serif"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/textViewDate"
        android:gravity="center"
        android:typeface="serif"
        android:layout_above="@+id/textView_minTempLabel"
        android:layout_alignLeft="@+id/textView_latestTemp"
        android:layout_alignStart="@+id/textView_latestTemp"
        android:layout_alignRight="@+id/textView_latestTemp"
        android:layout_alignEnd="@+id/textView_latestTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Min Temp:"
        android:id="@+id/textView_minTempLabel"
        android:padding="16dp"
        android:typeface="serif"
        android:layout_below="@+id/textView_latestTemp"
        android:layout_alignLeft="@+id/textViewDate"
        android:layout_alignStart="@+id/textViewDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Max Temp:"
        android:id="@+id/textView_maxTempLabel"
        android:padding="16dp"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView_minTempLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.00 F"
        android:id="@+id/textView_minTemp"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView_maxTemp"
        android:layout_toRightOf="@+id/verticalSeekBar"
        android:layout_alignRight="@+id/textView_minTempLabel"
        android:layout_alignEnd="@+id/textView_minTempLabel"
        android:gravity="center_horizontal|top"
        android:paddingBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.00 F"
        android:id="@+id/textView_maxTemp"
        android:gravity="center_horizontal|top"
        android:typeface="serif"
        android:layout_below="@+id/textView_maxTempLabel"
        android:layout_alignRight="@+id/textViewDate"
        android:layout_alignEnd="@+id/textViewDate"
        android:layout_alignLeft="@+id/textView_maxTempLabel"
        android:layout_alignStart="@+id/textView_maxTempLabel"
        android:paddingBottom="25dp" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webView"
        android:layout_below="@+id/textView_minTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>